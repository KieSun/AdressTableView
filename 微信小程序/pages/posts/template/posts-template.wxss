.post-container {
    display: flex;
    flex-direction: column;
    background-color: white;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding: 5rpx;
}
.user-container {
    margin: 10rpx 0 20rpx 10rpx;
}
.user-container image {
    width: 60rpx;
    height: 60rpx;
    margin-left: 10rpx;
    vertical-align: middle;
}
.user-container text {
    margin-left: 40rpx;
    color: gray;
    vertical-align: middle
}
.post-title {
    font-size: 40rpx;
    font-weight: bold;
    margin-left: 18rpx;
    margin-bottom: 20rpx;
}
.main-image {
    width: 100%;
    height: 340rpx;
    margin: auto 0;
    margin-bottom: 40rpx;
}
.main-text {
    margin-left: 15rpx;
    font-size: 30rpx;
}
.like-container {
    margin-left: 15rpx;
    margin-top: 20rpx;
}
.like-image {
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}
.like-font {
    font-size: 12px;
    vertical-align: middle;
    margin-right: 8px;
}